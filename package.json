{
	"name": "nats",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"format": "prettier --write .",
		"nats:start": "docker compose -f .devcontainer/docker/docker-compose.yaml up -d",
		"nats:stop": "docker compose -f .devcontainer/docker/docker-compose.yaml down"
	},
	"devDependencies": {
		"@nats/tsconfig": "workspace:*",
		"bun-types": "1.1.30",
		"prettier": "3.3.2",
		"turbo": "2.1.3"
	},
	"peerDependencies": {
		"typescript": "5.6.3"
	},
	"packageManager": "bun@1.1.30"
}
