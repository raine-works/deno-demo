{
	"name": "jetstream-demo",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"format": "prettier --write .",
		"nats:config": "helm repo add nats https://nats-io.github.io/k8s/helm/charts/ && helm repo update",
		"nats:install": "helm install nats-cluster nats/nats -f .devcontainer/k8s/nats/values.yaml",
		"nats:upgrade": "helm upgrade --install nats-cluster nats/nats -f .devcontainer/k8s/nats/values.yaml"
	},
	"devDependencies": {
		"@jetstream-demo/tsconfig": "workspace:*",
		"bun-types": "1.1.30",
		"prettier": "3.3.2",
		"turbo": "2.0.1"
	},
	"peerDependencies": {
		"typescript": "5.6.3"
	},
	"packageManager": "bun@1.1.30"
}
