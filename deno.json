{
	"tasks": {
		"hook": "deno run --allow-read --allow-run --allow-write https://deno.land/x/deno_hooks@0.1.1/mod.ts"
	},
	"workspace": [
		"api",
		"web"
	],
	"fmt": {
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"indentWidth": 4,
		"lineWidth": 120
	},
	"compilerOptions": {
		"lib": ["ES2020", "DOM", "DOM.Iterable", "deno.ns"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"jsxImportSourceTypes": "@types/react"
	}
}
