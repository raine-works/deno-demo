{
	"tasks": {
		"build": "deno compile --allow-net --allow-env --env-file=.env --output=.build/app src/index.ts",
		"dev": "deno run --allow-net --allow-env --watch-hmr=src --env=.env src/index.ts",
		"start": ".build/app"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 2,
		"singleQuote": true,
		"semiColons": false,
		"proseWrap": "always"
	}
}
